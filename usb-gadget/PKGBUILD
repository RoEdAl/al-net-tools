pkgbase='usb-gadget'
pkgname=('usb-gadget' 'usb-gadget-dhcp-server' 'usb-gadget-dhcp-client')
pkgver='1.4'
pkgrel='1'
arch=('any')
license=('BSD')

source=( 
	'25-br-gdg.netdev'
	'25-g-ether.link'
	'25-g-ether.network'
	'50-br-gdg-dhcp-server.network'
	'50-br-gdg-dhcp-client.network'
	'usb-gadget.sh'
	'usb-gadget.service'
	'libcomposite.conf'
	'serial-ttyGS0-part-of.conf'
	'env'
)

